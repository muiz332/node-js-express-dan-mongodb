<div class="container">
    <div class="row">
        <div class="col"><h1>ini adalah halaman kontak</h1></div>
    </div>
    <% if (msg.length != 0) { %>
     <div class="row mt-2">
         <div class="col-md-5">
            <div class="alert alert-primary" role="alert">
                <%= msg %> 
              </div>
         </div>
     </div>
    <% } %>
    <div class="row mt-2">
        <div class="col"><h4>Daftar kontak</h4></div>
    </div>
    <div class="row">
        <div class="col"><a href="/contact/add" class="btn btn-success">Tambah Kontak</a></div>
    </div>
    <div class="row mt-2">
        <div class="col-md-7">
           <% if (documents.length != 0) { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Email</th>
                    <th scope="col">Detil</th>
                  </tr>
                </thead>
                <tbody>
                    <% documents.forEach((document,i) => { i++%>
                        <tr>
                            <th scope="row"><%= i %> </th>
                            <td><%= document.nama %> </td>
                            <td><%= document.email %> </td>
                            <td><a href="/detil/<%= document.nama %> " class="btn btn-success">Detil</a></td>
                          </tr>
                    <% }) %>
                </tbody>
              </table>
           <% }else{ %>
            <div class="alert alert-danger" role="alert">Daftar Kontak masih kosong</div>
            <% } %> 
        </div>
    </div>
    



</div>