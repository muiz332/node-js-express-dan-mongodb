<section>
    <h1>ini adalah data mahasiswa</h1>
    <% if (mahasiswa.length === 0) { %>
        <div class="alert alert-primary" role="alert">
            maaf data mahasiswa kosong
          </div>
    <% }else{ %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Nama</th>
                <th scope="col">Nim</th>
                <th scope="col">Detil</th>
    
              </tr>
            </thead>
            <tbody>
    
                <% mahasiswa.forEach((mhs,i) => { i++%>
                    <tr>
                        <th scope="row"><%= i %> </th>
                        <td><%= mhs.nama %> </td>
                        <td><%= mhs.nim %> </td>
                        <td><a href="http://127.0.0.1:3000/detil/<%= mhs.nama %> " class="btn btn-success">detil</a></td>
                      </tr>
                <% }) %>
    
            </tbody>
          </table>
    <% } %> 
</section>