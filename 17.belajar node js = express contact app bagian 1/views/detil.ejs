<h1>ini adalah halaman detil</h1>

<section>
    <h3>detil dari mahasiswa</h3>
    <% if(!mahasiswa) { %> 
        <div class="alert alert-info" role="alert">
            tidak ada mahasiswa bernama <%= nama  %>  <a href="http://127.0.0.1:3000/contact" class="alert-link">Kembali kehalaman contact</a>
          </div>
    <% }else{ %>
        <ul>
            <li><%= mahasiswa.nama %> </li>
            <li><%= mahasiswa.nim %> </li>
            <li><%= mahasiswa.jurusan %> </li>
        </ul>

        <a href="http://127.0.0.1:3000/contact" class="btn btn-success">Kembali</a>
        
    <% } %> 
</section>