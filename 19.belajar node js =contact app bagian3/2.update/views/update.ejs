<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form ubah data contact</h2>
          
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

          <% if(typeof errors != 'undefined') { %> 
              <div class="alert alert-danger" role="alert">
                <ul >
                  <% errors.forEach(err => { %>
                    <li> <%= err.msg %> </li>
                  <% }) %>

                </ul>
              </div>

          <% } %> 


            <form method="post" action="/contact/update">

              <!-- kita tambahka nama lama sebagai hidden input agar nanti ketika menjalankan method update
              ada data lama dan ada data baru -->
                <div class="">
                  <input type="hidden" class="form-control" id="nama" name="namaLama" require value="<%= (contact.namaLama) ? contact.namaLama : contact.nama%>">
                </div>

                <!-- disini kita check kalo ada nama lama ambil yang nama lamanya 
                kalo gak ada ambil yang nama contactnya
              
                nama lama ini nanti akan masuk masuk kedalam req.bodynya -->

                
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" require value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="nama"  name="email" required value="<%= contact.email %>">
                </div>

                <div class="mb-3">
                  <label for="noHP" class="form-label">No HP</label>
                  <input type="text" class="form-control" id="noHP" name="noHP" required value="<%= contact.noHP %>">
                </div>


                <button type="submit" class="btn btn-success">Ubah data</button>
              </form>
        </div>
    </div>
</div>